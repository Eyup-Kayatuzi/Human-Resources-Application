@using InsanKaynaklari.MVC.ViewModels;
@*@model InsanKaynaklari.Domain.Dtos.LoginDto*@
@{
    Layout = "~/Views/Shared/_UnSignInLayout.cshtml";
}
@model LoginVM;
<body>

    <div class="container mt-5">
        <h1>Login</h1>

        <form asp-action="Login" method="post" class="mt-4">
            <div class="form-group">
                <label asp-for="UserName">Username</label>
                <input type="text" asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password">Password</label>
                <div class="input-group">
                    <input type="password" asp-for="Password" class="form-control" id="passwordInput" />
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <input type="checkbox" id="showPasswordCheckbox" onchange="togglePasswordVisibility()" />
                            <label for="showPasswordCheckbox">Show Password</label>
                        </div>
                    </div>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
                
            @if (TempData["msg"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["msg"]
                </div>
            }

            <button type="submit" class="btn btn-primary">Login</button>
           @* <a href="/UserAuthentication/Registration" class="btn btn-link fw-bold">Not a user? Click here to sign up</a>*@
            <a href="/UserAuthentication/ForgotPassword" class="btn btn-link fw-bold">Did you forget your password?</a>
        </form>
    </div>

    <script>
        function togglePasswordVisibility() {
            var passwordInput = document.getElementById("passwordInput");
            var showPasswordCheckbox = document.getElementById("showPasswordCheckbox");

            if (showPasswordCheckbox.checked) {
                passwordInput.type = "text";
            } else {
                passwordInput.type = "password";
            }
        }
    </script>

</body>
