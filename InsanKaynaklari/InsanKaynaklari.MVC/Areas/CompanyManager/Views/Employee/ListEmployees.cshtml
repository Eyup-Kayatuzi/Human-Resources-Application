@model List<ListEmployeesVM>
@using InsanKaynaklari.MVC.Areas.CompanyManager.ViewModels;


@{
    ViewData["Title"] = "ListEmployees";
    Layout = "~/Areas/CompanyManager/Views/Shared/_companyManagerLayout.cshtml";
}
<div class="card border-0 shadow-lg bg-light my-5">
    <div class="card-body px-3">
        <div class="row">
            <div class="col-12">
                <table class="table table-striped table-primary table-hover">
                    <thead>
                        <tr>
                            <th scope="col"></th>
                            <th scope="col">Name</th>
                            <th scope="col">Surname</th>
                            <th scope="col">Email</th>
                            <th scope="col">PhoneNumber</th>
                            <th scope="col">Department</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="vertical-align: middle"><img class="img-fluid" style="width:80px; height:80px" src="~/images/@item.PicturePath"></td>
                                <td style="vertical-align: middle">@(item.FirstName + " " + item.SecondName)</td>
                                <td style="vertical-align: middle">@(item.LastName + " " + item.SecondLastName)</td>
                                <td style="vertical-align: middle">@item.Email</td>
                                <td style="vertical-align: middle">@item.PhoneNumber</td>
                                <td style="vertical-align: middle">@item.Department</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
