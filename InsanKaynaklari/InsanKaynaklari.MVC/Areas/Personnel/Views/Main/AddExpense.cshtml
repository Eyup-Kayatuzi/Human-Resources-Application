@using InsanKaynaklari.MVC.Areas.Personnel.ViewModels;
@model AddExpenseVM

<div class="card border-0 shadow-lg bg-light my-5">
    <div class="card-body px-3">
        <form asp-action="AddExpense" enctype="multipart/form-data" method="post">
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="ExpenseType">Expense Type</label>
                        <select class="form-control" asp-for="ExpenseType" asp-items="@Model.ExpenseTypes">
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="ExpenseAmount">Expense Amount</label>
                        <input type="text" class="form-control" id="ExpenseAmount" asp-for="ExpenseAmount">
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Currency">Currency</label>
                        <select class="form-control" asp-for="Currency" asp-items="@Model.Currencies">
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="NewPicturePath">New Picture Path</label>
                        <input type="file" class="form-control" id="NewPicturePath" asp-for="NewPicturePath">
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Add</button>
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <ul>
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }
        </form>
    </div>
</div>
